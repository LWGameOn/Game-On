<div class="container">
  <section class="vh-100 bg-image;">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card mb-5" style="border-radius: 15px;">
              <div class="card-body p-5 text-style">
                <h2 class="text-uppercase text-center mb-5 text-style ">Create an event</h2>
                <%= simple_form_for [@event] do |f| %>
                  <%= f.error_notification %>
                  <div class="form-inputs">
                    <div class="form-outline mb-4">
                      <%= f.input :name %>
                    </div>
                    <div class="form-outline mb-4">
                    <%= f.input :description,
                                  as: :text%>
                    </div>
                    <div class="form-outline mb-4">
                    <%= f.input :location,
                      as: :search,
                      input_html: { value: params[:location], data: {location_autocomplete_target: "location"}, class: "d-none"},
                      wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
                    <div class="form-outline mb-4">
                    <%= f.input :date,
                                as: :datetime, minute_step: 15,
                                autofocus: true,
                                html5: true, class:"form-control form-control-lg" %>
                    </div>
                    <div class="form-outline mb-4">
                    <%= f.input :capacity,
                                as: :numeric, class:"form-control form-control-lg" %>
                    </div>
                    <div class="form-outline mb-4">
                    <%= f.input  :sport, class:"form-control form-control-lg" %>
                    </div>
                    <%= f.input :photo,
                                  required: false,
                                  autofocus: true,
                                  as: :file, class: "form-control form-control-lg" %>
                  </div>
                  <div class="form-actions d-flex justify-content-center">
                    <%= submit_tag "Create event", class: "btn1" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
