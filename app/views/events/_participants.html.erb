<div class="participants mt-3">
  <h3 class="card-title">Participants</h3>
  <div class="d-flex">
    <% @event.plays.each do |play| %>
      <% if play.user != current_user && play.user.avatar.attached? %>
        <div><%= link_to cl_image_tag(
            play.user.avatar.key,
            height: 70,
            width: 70,
            crop: :fill,
            class: "profile-picture",
            style: "margin-top:0px; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);"
          ),
          user_path(play.user.id) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
