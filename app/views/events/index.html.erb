<div>
  <%= render "shared/map" %>
</div>

<div class="search mt-4 mb-4">
  <%= form_with url: events_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :name_sport_or_location,
      params[:name_sport_or_location],
      class: "form-control",
      placeholder: "Search for a name, a sport or a location"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>


<div class="search mt-4 mb-4">
  <%= simple_form_for(:date, method: :get, url: events_path, defaults: { input_html: { class: 'd-flex' } }) do |f| %>
    <%= f.input :start,
                as: :date,
                autofocus: true,
                html5: true, class:"form-control form-control-lg" %>

    <%= f.input :end,
                as: :date,
                autofocus: true,
                html5: true, class:"form-control form-control-lg" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Events</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
        <div class="col-2 m-2">
          <%= submit_tag "Search", class: "btn btn-outline btn1 rounded-pill " %>
        </div>
      </div>
     <% end %>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Events</h3>
    <%= link_to "Create an event", new_event_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @events.each do |event| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to event_path(event), class:"text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('event_background.jpg') %>)">
            <%= event.name %>
  <div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h3 class="mb-0">Events</h3>
      <%= link_to "Create an event", new_event_path, class: "btn btn-flat" %>
    </div>
    <div class="row">
      <% if @events.any? %>
        <% @events.each do |event| %>
          <div class="co-12 col-sm-6 col-md-4 mb-3">
            <%= link_to event_path(event), class:"text-decoration-none" do %>
              <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('event_background.jpg') %>)">
                <%= event.name %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p>no events found!</p>
      <% end %>
    </div>
  </div>
</div>
