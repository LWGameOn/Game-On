<div id="message-<%= message.id %>">
  <small>
    <strong><%= link_to message.user.username ? message.user.username : message.user.email,
      user_path(message.user.id) %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
  <% if message.photo.attached? %>
    <div class="justify-content-center">
      <%= link_to cl_image_path(message.photo.key), target: "_blank" do %>
        <%= cl_image_tag message.photo.key, height: 245, width: 245, crop: :fill %>
      <% end %>
    </div>
  <% end %>
</div>
