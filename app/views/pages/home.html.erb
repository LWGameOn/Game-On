<div class="contain">
 <div class="icons m-3" style="position:relative; float:right; overflow:hidden;">
   <%= link_to root_path do %>
      <%= image_tag("logo",
            width: 150, height: 150, crop: :fill) %>
    <% end %>
  </div>

  <h1>Find your team close by ...</h1>
  <div class="search mt-4 mb-4" style="width:90%; margin-left:20px;">
    <%= simple_form_for :query, :url => events_path, :method => :get do |f| %>
      <%= f.error_notification %>
      <%= f.input :location, as: :hidden, input_html: { data: {location_autocomplete_target: "location"}, class: "d-none"},
      wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
      %>

      <%= f.submit "Submit location", class:"btn1" %>
    <% end  %>
  </div>
</div>
