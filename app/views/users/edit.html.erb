<div class="container">
  <section class="vh-100 bg-image;">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5 text-style">
                <h2 class="text-uppercase text-center mb-5 text-style ">Edit Your Profile</h2>
                <%= simple_form_for [@user]  do |f| %>
                  <div class="form-inputs">
                    <div class="form-outline mb-4">
                    <%= f.input  :username, class:"form-control form-control-lg" %>
                    </div>
                    <div class="form-outline mb-4">
                    <%= f.input :bio,
                                  as: :text, class: "form-control form-control-lg" %>
                    </div>
                    <div class="form-outline mb-4">
                    <%= f.input :avatar,
                                 as: :file, class: "form-control form-control-lg" %>
                  </div>
                  <div class="form-actions d-flex justify-content-center">
                    <%= submit_tag "Update Profile", class: "btn btn-outline btn1 rounded-pill " %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
