<div class="container" data-controller="calendar-show">
<div class="row mt-3">
  <div class="col-6">
    <h2 class="mb-0 title">Event Schedule</h2>
  </div>
  <div class=" col-6 button-right py-3" style="text-align: right;">
    <%= link_to "Create an event", new_event_path, class: "btn2" %>
  </div>

</div>

  <% if user_signed_in? %>
    <div class="container monthly_calendar mt-2" style="max-width:100%">
      <%= month_calendar(events: @events) do |date, events| %>
        <%= date.day %>

        <% events.each do |e| %>
          <div>
            <button class="btn-calendar" data-event-id="<%= e.id %>" data-event-url="<%= event_details_path(e) %>" data-action="click->calendar-show#showCard"
            data-calendar-show-target="button"><i class="fa-solid fa-futbol"></i></button>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="event-details" data-calendar-show-target="card">

    </div>
  <% else %>
    <p>Must be signed in to see schedule</p>
  <% end %>
</div>
