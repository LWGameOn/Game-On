<%= simple_form_for(event) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :location, as: :hidden, input_html: { value: params[:location], data: {location_autocomplete_target: "location"}, class: "d-none"},
      wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
      %>
  <%= f.input :date %>
  <%= f.input :time %>
  <%= f.input :capacity %>
  <%= f.input :sport %>
  <%= f.submit %>
<% end %>
