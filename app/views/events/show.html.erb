<div class="show mb-3">
  <% if @event.photo.attached? %>
    <%= cl_image_tag @event.photo.key, style: "width:100%; height:320px; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25)" %>
  <% else %>
    <%= image_tag "event_background.jpg", style: "width:100%; height:320px; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25)" %>
  <% end %>
  <div class="container card-info" id="anchor-join">
    <h1 class="card-title"> <%= @event.name %></h1>
    <p class="fw-light text-font"><%= @event.sport.capitalize %></p>
    <p class="fw-light text-font">Created by <%= link_to "@#{(@event.user == current_user ? "you" : @event.user.username)}", user_path(@event.user) %></p>
  </div>
  <div class="card p-3 mx-3">
    <%= render "event_details" %>
    <div class="pb-3 card-comp">
      <%= @event.description %>
      <% if current_user.nil? %>
        <strong><p class="mt-2">Must be logged in to join game</p></strong>
      <% else %>
        <% if @players.include?(current_user.id) %>
          <h3>You have joined this fun game</h3>
          <%= render "joined_event_buttons" %>
          <%= render "participants" %>
        <% else %>
          <%= simple_form_for [@event, @play] do |f| %>
            <%= f.error_notification %>
            <div class="btn-wrapper d-flex justify-content-between">
              <p class="mt-2"><%= f.submit "JOIN", class: "btn1"%></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= render "reviews" %>
</div>
