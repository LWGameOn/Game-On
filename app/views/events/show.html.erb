<h1> <%= @event.name %> </h1>
<% if @has_joined %>
  <h2>You have joined this fun game</h2>
<% else %>
  <%= simple_form_for [@event, @play] do |f| %>
    <%= f.submit "JOIN" %>
  <% end %>
<% end %>

<div>
  <%= @event.user_id == current_user.id ? (button_to "Destroy this event", @event, method: :delete) : "" %>
</div>
